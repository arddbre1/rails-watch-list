<h1 class="banner">Create a movie list📽️🎬</h1>

<p class="mb-5"><%= link_to "+Add a movie list",  new_list_path(@list), class: "btn btn-success" %></p>
<div class="">
<% @lists.each do |list| %>
<ul>
  <li>
  <%= link_to list.name, list_path(list), class: "text-decoration-none" %>
  <%= link_to "❌delete ", list_path(list), data:{turbo_method: :delete}, class: "btn btn-light" %>
  </li>
  </ul>
<% end %>
</div>
